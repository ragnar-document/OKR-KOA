/* pages/editpage/editpage.wxss */
.page-editpage-container{
    padding: 40rpx;
}
.page-editpage-title{
    font-size: 36px;
    color: #2dbcff;
    margin-bottom:40rpx; 
    border-bottom:1px solid #eee; 
}
.page-editpage-title::after{
    position: absolutea;
    content:'EditProject';
    font-size: 20px;
    color: #eee;
}
.page-editpage-form text{
    border-left: 4px solid #2dbcff;
    padding-left: 4px;
}
.page-editpage-form text::after{
  content: '*';
  color: #f47983;
}

.page-editpage-form .pj-target,.pj-name{
    height: 60rpx;
    background-color: #eee;
    border-radius: 10rpx;
    margin: 20rpx 0;
    padding: 0 20rpx;
}
.page-editpage-form .pj-remark{
    padding: 20rpx 20rpx;
    background-color: #eee;
    height: 200rpx;
    width: 94%;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}
.page-editpage-form .pj-editpage{
    background: #2dbcff;
    color: #fff;
}
.pj-editpage_hover{
   background: #2dbcff8a;
}
.page-editpage-time{
    display: flex;
    justify-content: space-between;
    padding: 40rpx 0;
    font-size: small;
}
.page-editpage-time .page-editpage-startTime{
    background-color: #3de1ad;
    border-radius: 20rpx;
    padding: 10rpx;
    color: #fff;
    width: 45%;
}
.page-editpage-time .page-editpage-endTime{
    background-color: #f47983;
    border-radius: 20rpx;
    padding: 10rpx;
    color: #fff;
    width: 45%;
}

